<aura:component   implements="flexipage:availableForAllPageTypes"   access="global"  controller="ItemEmprestimoController">
  <!--Atributos-->
  <aura:attribute name="emprestimo" type="String" />
  <aura:attribute name="livro" type="String" />
  <aura:attribute name="quantidade" type="Integer" />

  <div class="slds-grid slds-wrap">
    <div class="slds-size--1-of-2 slds-p-horizontal_medium">
      <h1 class="slds-text-heading_medium">Item Emprestimo</h1>
    </div>
    <div class="slds-size--1-of-2 slds-p-horizontal_medium">
      <lightning:input
        type="string"
        label="Emprestimo"
        value="{!v.emprestimo}"
      />
    </div>
    <div class="slds-size--1-of-2 slds-p-horizontal_medium">
      <lightning:input
        type="string"
        label="Livro"
        value="{!v.livro}"
      />
    </div>
    <div class="slds-size--2-of-4 slds-p-horizontal_medium">
      <lightning:input
        type="number"
        label="Quantidade"
        value="{!v.quantidade}"
      />
    </div>
    <div class="slds-size--1-of-4 slds-p-horizontal_medium" id="button">
      <lightning:button
        class="slds-button slds-button_success"
        label="Salvar"
        onclick="{!c.salvaItemEmprestimo}"
      ></lightning:button>
    </div>
  </div>
</aura:component>
