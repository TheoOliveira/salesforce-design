<aura:component   implements="flexipage:availableForAllPageTypes"   access="global"  controller="DevolucaoController">

<aura:attribute name="idEmprestimo" type="String" />

    <div class="slds-grid slds-wrap">
        <div class="slds-size--1-of-1 slds-p-horizontal_medium">
          <h1 class="slds-text-heading_medium">Devolução</h1>
        </div>
        <div class="slds-size--1-of-2 slds-p-horizontal_medium">
          <lightning:input
            type="string"
            label="Id do Empréstimo"
            value="{!v.idEmprestimo}"
          />
           <!--  <c:LeitorLookup selectedLookUpRecord="{!v.nomeLeitor}" /> -->
          
        </div>
        
        <div class="slds-size--1-of-4 slds-p-horizontal_medium" id="button">
          <lightning:button
            class="slds-button slds-button_success"
            label="Salvar"
            onclick="{!c.salvaDevolucao}"
          ></lightning:button>
        </div>
      </div>
    </aura:component>
    