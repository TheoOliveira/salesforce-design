<aura:component>
  <aura:attribute name="items" type="Camping_Item__c[]" />
  <aura:attribute
    name="newItem"
    type="Camping_Item__c"
    default="{'sobjectType': 'Camping_Item__c',
    'Quantity__c': 0,
    'Price__c' : 0 }"
  />
  <lightning:layout>
    <lightning:layoutItem>
      <lightning:input
        name="Name"
        value="{!v.newItem.Name}"
        label="Name"
        type="String"
        aura:id="itemform"
      />
    </lightning:layoutItem>
    <lightning:layoutItem>
      <lightning:input
        aura:id="itemform"
        name="Quantity"
        label="Quantity"
        value="{!v.newItem.Quantity__c}"
        type="number"
        required="true"
        min="1"
        messageWhenRangeUnderflow="Enter minimum 1 Quantity"
      />
    </lightning:layoutItem>
    <lightning:layoutItem>
      <lightning:input
        type="number"
        aura:id="itemform"
        label="Price"
        name="price"
        min="0.1"
        formatter="currency"
        step="0.01"
        value="{!v.newItem.Price__c}"
      />
    </lightning:layoutItem>
    <lightning:layoutItem>
      <lightning:input
        type="checkbox"
        aura:id="itemform"
        label="Packed?"
        name="packed"
        checked="{!v.newItem.Packed__c}"
      />
    </lightning:layoutItem>
    <lightning:layoutItem>
      <lightning:button
        variant="brand"
        label="Create new Camping Item"
        title="Primary action"
        onclick="{!c.clickCreateItem}"
        class="slds-m-left_x-small"
      ></lightning:button>
    </lightning:layoutItem>
  </lightning:layout>

  <aura:iteration items="{!v.items}" var="item">
    <c:campingListItem item="{!item}" />
  </aura:iteration>
</aura:component>
