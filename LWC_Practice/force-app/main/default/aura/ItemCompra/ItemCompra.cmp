<aura:component
  implements="flexipage:availableForAllPageTypes"
  access="global"
  controller="CadastraItemCompraController"
>
  <aura:attribute name="produtoId" type="String" />
  <aura:attribute name="quantidade" type="Integer" />
  <aura:attribute name="compraId" type="String" />

  <div class="slds-text-heading_medium slds-text-align_center"
    >Cadastro de Itens de Compras</div
  >

  <div class="slds-box">
    <lightning:layout>
      <lightning:layoutItem padding="around-small">
        <div class="slds-m-around_medium">
          <lightning:input
            type="string"
            label="Id do Produto"
            value="{!v.produtoId}"
          />
        </div>
      </lightning:layoutItem>
      <lightning:layoutItem padding="around-small">
        <div class="slds-m-around_medium">
          <lightning:input
            type="number"
            label="Quantidade"
            value="{!v.quantidade}"
          />
        </div>
      </lightning:layoutItem>
      <lightning:layoutItem padding="around-small">
        <div class="slds-m-around_medium">
          <lightning:input
            type="String"
            label="CompraId"
            value="{!v.compraId}"
          />
        </div>
      </lightning:layoutItem>
    </lightning:layout>

    <lightning:layout>
      <lightning:layoutItem class="slds-m-around_medium">
        <div class="slds-m-around_medium">
          <lightning:button
            variant="brand"
            label="Salvar"
            onclick="{!c.salvaItemCompra}"
          >
          </lightning:button>
        </div>
      </lightning:layoutItem>
    </lightning:layout>
  </div>
</aura:component>
