<aura:component   implements="flexipage:availableForAllPageTypes"   access="global"  controller="EmprestimoController">
  <!--Atributos-->
  <aura:attribute name="nomeLeitor" type="String" />
  <aura:attribute name="dataEmprestimo" type="String" />
  <div class="slds-grid slds-wrap">
    <div class="slds-size--1-of-2 slds-p-horizontal_medium">
      <lightning:input
        type="string"
        label="Nome do Leitor"
        value="{!v.nomeLeitor}"
      />
    </div>
    <div class="slds-size--2-of-4 slds-p-horizontal_medium">
      <lightning:input
        type="date"
        label="Data do EmprÃ©stimo"
        value="{!v.dataEmprestimo}"
      />
    </div>
    <div class="slds-size--1-of-4 slds-p-horizontal_medium" id="button">
      <lightning:button
        class="slds-button slds-button_success"
        label="Salvar"
        onclick="{!c.salvaEmprestimo}"
      ></lightning:button>
    </div>
  </div>
</aura:component>
